<h1>Job Resource Main Page</h1>

<form action='/' method='get'>
  <input type="text" name="query" placeholder="Enter your search here">
  <input type="text" name="location" placeholder="Enter your location">
  <input type="submit" value="Search jobs!">
</form>

<!-- display last scrape results -->
<table>
  <tr>
    <th>Job Title</th>
    <th>Company</th>
    <th>Location</th>
    <th>Date</th>
  </tr>
<%CSV.read("jobs.csv").each do |row|%>
  <%url = row[-1]%>
  <tr><%row[0..3].each_with_index do |cell, index| %>
    <%if index == 0%>
      <td><a href=<%=url%>><%=cell%></a></td>
    <%else%>
      <td><%=cell%></td>
    <%end%>
  <%end%></tr> 
<%end%>
</table>